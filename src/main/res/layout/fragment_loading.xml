<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <android.support.constraint.Guideline
      android:id="@+id/left"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:orientation="vertical"
      app:layout_constraintGuide_begin="@dimen/margin_nl"
      />

  <android.support.constraint.Guideline
      android:id="@+id/right"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:orientation="vertical"
      app:layout_constraintGuide_end="@dimen/margin_nl"
      />

  <ProgressBar
      android:id="@+id/loadingIndicator"
      android:layout_width="115dp"
      android:layout_height="115dp"
      android:layout_marginTop="@dimen/margin_nl"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/circle"
      android:layout_width="64dp"
      android:layout_height="64dp"
      android:src="@color/green_success"
      app:layout_constraintBottom_toBottomOf="@id/loadingIndicator"
      app:layout_constraintLeft_toLeftOf="@id/loadingIndicator"
      app:layout_constraintRight_toRightOf="@id/loadingIndicator"
      app:layout_constraintTop_toTopOf="@id/loadingIndicator"
      />

  <com.joanzapata.iconify.widget.IconTextView
      android:id="@+id/icon"
      android:layout_width="64dp"
      android:layout_height="64dp"
      android:gravity="center"
      android:maxLines="1"
      android:text="{fa-university}"
      android:textAlignment="center"
      android:textColor="@color/md_white_1000"
      android:textSize="@dimen/fs_headline"
      app:layout_constraintBottom_toBottomOf="@id/circle"
      app:layout_constraintLeft_toLeftOf="@id/circle"
      app:layout_constraintRight_toRightOf="@id/circle"
      app:layout_constraintTop_toTopOf="@id/circle"
      tools:ignore="HardcodedText"
      />

  <TextView
      android:id="@+id/txtTitle"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:paddingLeft="@dimen/margin_lg"
      android:paddingRight="@dimen/margin_lg"
      android:text="@string/linkingAccount_title"
      app:layout_constraintBottom_toTopOf="@id/txtDescription"
      app:layout_constraintLeft_toLeftOf="@id/left"
      app:layout_constraintRight_toRightOf="@id/right"
      app:layout_constraintTop_toBottomOf="@id/circle"
      app:layout_constraintVertical_bias="0.2"
      app:layout_constraintVertical_chainStyle="packed"
      style="@style/TextTitle"
      />

  <TextView
      android:id="@+id/txtDescription"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/margin_nl"
      android:maxLines="3"
      android:paddingLeft="@dimen/margin_lg"
      android:paddingRight="@dimen/margin_lg"
      android:text="@string/linkingAccount_description"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="@id/left"
      app:layout_constraintRight_toRightOf="@id/right"
      app:layout_constraintTop_toBottomOf="@id/txtTitle"
      style="@style/TextDescription"
      />
</android.support.constraint.ConstraintLayout>